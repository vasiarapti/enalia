---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';
import '../styles/tailwind.css';
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ενάλια</title>
  </head>
  <body class="min-h-screen flex flex-col bg-secondary">

    <!-- Full height wrapper with sidebar + main content -->
    <div class="flex flex-1 min-h-0 md:flex-row">
      <!-- Sidebar -->
      <Sidebar client:load />

      <!-- Main content with header and slot -->
      <div class="flex-1 flex flex-col bg-[url('/images/wave-haikei.svg')] bg-no-repeat bg-cover bg-right">
        <Header />
        <main class="flex-1 px-4 md:px-8 pt-20 md:pt-16">
          <slot />
        </main>
      </div>
    </div>

    <!-- Footer pushed to bottom -->
    <Footer />

  </body>
</html>