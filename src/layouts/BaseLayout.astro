---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';
import '../styles/tailwind.css';
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ενάλια</title>
  </head>
  <body class="min-h-screen bg-secondary">
    <div class="flex md:flex-row flex-col min-h-screen">
      
      <!-- Sidebar (fixed width on desktop) -->
      <Sidebar client:load />

      <!-- Main Content + Footer block -->
      <div class="flex flex-col flex-1 bg-[url('/images/wave-haikei.svg')] bg-no-repeat bg-cover bg-right">
        <Header />
        
        <main class="flex-1 px-4 md:px-8 pt-20 md:pt-16">
          <slot />
        </main>

        <!-- Footer only spans under main content -->
        <div class="px-4 md:px-8">
          <Footer />
        </div>
      </div>

    </div>
  </body>
</html>