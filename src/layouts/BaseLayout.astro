---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';
import '../styles/tailwind.css';
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ενάλια</title>
  </head>
  <body class="min-h-screen flex flex-col bg-secondary">
    <!-- Full layout (excluding footer) -->
    <div class="flex flex-1 flex-col md:flex-row min-h-0">
      <!-- Sidebar with background image -->
      <Sidebar client:load />

      <!-- Content area with wave background -->
      <div class="flex-1 flex flex-col md:pl-72 bg-right bg-no-repeat bg-cover bg-contain bg-[url('/images/wave-haikei.svg')]">
        <Header />
        <main class="flex-1 px-4 md:px-8 pt-20 md:pt-16">
          <slot />
        </main>
      </div>
    </div>

    <!-- Footer is now outside the wave background container -->
    <Footer />
  </body>
</html>