---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';
import '../styles/tailwind.css';
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ενάλια</title>
  </head>
  <body class="bg-[url('/images/wave-haikei.svg')] bg-no-repeat">
    <!-- Sidebar always mounted, overlays on mobile, fixed on desktop -->
    <Sidebar client:load />

    <!-- Main layout content -->
    <div class="flex flex-col md:ml-72 min-h-screen transition-all duration-300">
      <Header />

      <main class="flex-1 overflow-y-auto overflow-x-hidden p-6">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
