---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';
import '../styles/tailwind.css';
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ενάλια</title>
  </head>

  <script is:inline>
    (() => {
      const reduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      const els = document.querySelectorAll('[data-reveal]');
      if (reduce) {
        els.forEach(el => el.setAttribute('data-reveal', 'in'));
        return;
      }
      const io = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const el = entry.target;
            // optional stagger via data-reveal-delay (ms)
            const delay = el.dataset.revealDelay || 0;
            el.style.transitionDelay = delay ? `${delay}ms` : '';
            // reveal on next frame for consistency
            requestAnimationFrame(() => el.setAttribute('data-reveal','in'));
            obs.unobserve(el);
          }
        });
      }, { threshold: 0.15, rootMargin: '0px 0px -5% 0px' });

      els.forEach(el => io.observe(el));
    })();
  </script>

  <body class="min-h-screen bg-secondary">
    <div class="flex flex-col md:flex-row min-h-screen">
      <Sidebar client:load />

      <div class="flex flex-col flex-1 min-h-screen relative">
        <!-- Header -->
        <Header />

         <!-- Banner placed here OUTSIDE main, so no padding constrains it -->
        <div class="top-[76px] md:left-72 w-full md:w-[calc(100%-0rem)] z-10">
          <slot name="banner" />
        </div>

        <!-- Main content -->
        <main class="flex-1 bg-[url('/images/wave-haikei-bg2.svg')] bg-no-repeat bg-cover bg-right px-4 md:px-8 pt-16 md:pt-16">
          <slot />
        </main>

        <footer>
          <Footer />
        </footer>
      </div>
    </div>
  </body>
</html>