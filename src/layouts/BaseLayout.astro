---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';
import '../styles/tailwind.css';
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ενάλια</title>
  </head>

  <body class="min-h-screen bg-secondary">
    <div class="flex flex-col md:flex-row min-h-screen">
      <Sidebar client:load />

      <div class="flex flex-col flex-1 min-h-screen relative">
        <!-- Header -->
        <Header />

         <!-- Banner placed here OUTSIDE main, so no padding constrains it -->
        <div class="top-[76px] md:left-72 w-full md:w-[calc(100%-0rem)] z-10">
          <slot name="banner" />
        </div>

        <!-- Main content -->
        <main class="flex-1 bg-[url('/images/wave-haikei-light2.svg')] bg-no-repeat bg-cover bg-right px-4 md:px-8 pt-20 md:pt-16">
          <slot />
        </main>

        <footer>
          <Footer />
        </footer>
      </div>
    </div>
  </body>
</html>