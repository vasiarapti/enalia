---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';
import '../styles/tailwind.css';
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ενάλια</title>
  </head>
  <body class="min-h-screen flex flex-col md:flex-row bg-secondary">
    <div class="flex flex-col md:flex-row flex-1 min-h-screen bg-right bg-no-repeat bg-cover bg-contain bg-[url('/images/wave-haikei.svg')]">
      <!-- Sidebar always mounted, overlays on mobile, fixed on desktop -->
      <Sidebar client:load />

      <!-- Main layout content -->     
      <div class="flex-1 flex flex-col md:pl-72">
        <Header />
          <main class="flex-1 px-4 md:px-8 pt-20 md:pt-16">
            <slot />
          </main>
      </div>
    </div>
    <!-- Footer outside the background image container -->
    <Footer />
  </body>
</html>
