---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.jsx';

// ⬅️ Match the actual filename exactly ('Seo.astro' vs 'seo.astro')
import Seo from '../components/Seo.astro';

import '../styles/tailwind.css';
import logo_fav from '../assets/favicon-16x16.png';

/** Build a canonical URL that works on GH Pages */
const SITE_ORIGIN =
  (Astro.site && Astro.site.origin) ||
  (import.meta.env.SITE?.replace(/\/$/, '')) || // remove trailing slash if present
  'https://vasiarapti.github.io';

const BASE = import.meta.env.BASE_URL || '/enalia/'; // ends with a slash

// e.g. https://vasiarapti.github.io/enalia/about
const pageUrl = new URL(
  Astro.url.pathname.replace(/^\//, ''),
  new URL(BASE, SITE_ORIGIN)
).toString();

/** Safe defaults so pages build even if they don't pass props */
const {
  title = 'Ενάλια | Κέντρο Ψυχοθεραπείας στη Νέα Ιωνία',
  description = 'Ψυχοθεραπεία στη Νέα Ιωνία: Ατομική, Ζεύγους, Οικογενειακή, Online.',
} = Astro.props;
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Let Seo set <title> + meta -->
    <Seo title={title} description={description} url={pageUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href={logo_fav.src} />

    <slot name="head" />

    <!-- LocalBusiness JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Ενάλια",
        "image": "https://vasiarapti.github.io/enalia/og-default.jpg",
        "url": "https://vasiarapti.github.io/enalia/",
        "telephone": "+306972078685",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Λευκής 12",
          "addressLocality": "Νέα Ιωνία",
          "postalCode": "14231",
          "addressCountry": "GR"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 38.03656,
          "longitude": 23.74254
        },
        "openingHoursSpecification": [{
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"],
          "opens": "09:00",
          "closes": "21:00"
        }]
      }
    </script>
  </head>

  <script is:inline>
    (() => {
      const reduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      const els = document.querySelectorAll('[data-reveal]');
      if (reduce) { els.forEach(el => el.setAttribute('data-reveal','in')); return; }
      const io = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const el = entry.target;
            const delay = el.dataset.revealDelay || 0;
            el.style.transitionDelay = delay ? `${delay}ms` : '';
            requestAnimationFrame(() => el.setAttribute('data-reveal','in'));
            obs.unobserve(el);
          }
        });
      }, { threshold: 0.15, rootMargin: '0px 0px -5% 0px' });
      els.forEach(el => io.observe(el));
    })();
  </script>

  <body class="min-h-screen bg-secondary">
    <div class="flex flex-col md:flex-row min-h-screen">
      <Sidebar client:load />

      <div class="flex flex-col flex-1 min-h-screen relative">
        <Header />

        <!-- Banner slot -->
        <div class="top-[76px] md:left-72 w-full md:w-[calc(100%-0rem)] z-10">
          <slot name="banner" />
        </div>

        <main class="flex-1 bg-secondary px-4 md:px-8 pt-16 md:pt-16">
          <slot />
        </main>

        <footer>
          <Footer />
        </footer>
      </div>
    </div>
  </body>
</html>
