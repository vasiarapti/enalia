---
import BaseLayout from '../layouts/BaseLayout.astro';
import image1 from '../assets/our-place/place1.jpg';
import image2 from '../assets/our-place/place2.jpg';
import image3 from '../assets/our-place/place3.jpg';
import { Image } from 'astro:assets';
const title = 'Ο Χώρος | Ενάλια';
const description = 'Ψυχοθεραπευτικό κέντρο στη Νέα Ιωνία. Ατομική θεραπεία, ζεύγους, οικογενειακή.';
---


<BaseLayout {title} {description}>
    <div class="min-h-screen flex flex-col">
        <div class="max-w-screen-xl mx-auto px-4 lg:px-6 flex-1 py-10">
        <h2 class="text-4xl font-bold tracking-tight text-primary-800 text-center mb-10">
            Ο Χώρος
        </h2>
        </div>
    <div class="grid grid-cols-2 gap-2">
        <div>
            <Image src={image1} alt="Χώρος θεραπείας" class="h-auto max-w-full rounded-lg" />
        </div>
        <div>
            <Image src={image2} alt="Χώρος θεραπείας" class="h-auto max-w-full rounded-lg" />
        </div>
        <div>
            <Image src={image3} alt="Χώρος θεραπείας" class="h-auto max-w-full rounded-lg" />
        </div>
        <div>
            <Image src={image2} alt="Χώρος θεραπείας" class="h-auto max-w-full rounded-lg" />
        </div>
    </div>
</div>
</BaseLayout>