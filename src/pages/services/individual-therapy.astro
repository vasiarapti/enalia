---
// Props: { title: string, content: string, imgSrc: string, reverse?: boolean }
const { title, content, imgSrc, reverse = false } = Astro.props;
---

<section class="flex flex-col md:flex-row gap-8 my-12 items-center" class:list={!reverse ? "md:flex-row" : "md:flex-row-reverse"}>
  <img src={imgSrc} alt={title} class="w-full md:w-1/2 rounded shadow" loading="lazy" />
  <div class="w-full md:w-1/2">
    <h2 class="text-2xl font-bold mb-4">{title}</h2>
    <p class="text-gray-700">{content}</p>
  </div>
</section>
