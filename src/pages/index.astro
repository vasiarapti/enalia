---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import image1 from '../assets/our-place/images1.jpg';
import chris from '../assets/team/chris.jpg';
import evi from '../assets/team/evi.jpg';
---

<BaseLayout>
  <Fragment slot="banner">
    <div class="relative w-full h-[320px] overflow-hidden">
      <svg width="100%" height="100%" id="svg" viewBox="0 0 1440 690" xmlns="http://www.w3.org/2000/svg" class="transition duration-300 ease-in-out delay-150"><style>
              .path-0{
                animation:pathAnim-0 4s;
                animation-timing-function: linear;
                animation-iteration-count: infinite;
              }
              @keyframes pathAnim-0{
                0%{
                  d: path("M 0,700 L 0,262 C 138.92857142857144,328.4642857142857 277.8571428571429,394.92857142857144 405,381 C 532.1428571428571,367.07142857142856 647.5000000000001,272.75 760,260 C 872.4999999999999,247.24999999999997 982.1428571428571,316.07142857142856 1095,330 C 1207.857142857143,343.92857142857144 1323.9285714285716,302.9642857142857 1440,262 L 1440,700 L 0,700 Z");
                }
                25%{
                  d: path("M 0,700 L 0,262 C 93,315.42857142857144 186,368.85714285714283 314,354 C 442,339.14285714285717 605.0000000000001,256 739,234 C 872.9999999999999,211.99999999999997 978,251.1428571428571 1090,266 C 1202,280.8571428571429 1321,271.42857142857144 1440,262 L 1440,700 L 0,700 Z");
                }
                50%{
                  d: path("M 0,700 L 0,262 C 155.53571428571428,219.28571428571428 311.07142857142856,176.57142857142858 426,169 C 540.9285714285714,161.42857142857142 615.2500000000001,189 731,218 C 846.7499999999999,247 1003.9285714285713,277.42857142857144 1129,285 C 1254.0714285714287,292.57142857142856 1347.0357142857142,277.2857142857143 1440,262 L 1440,700 L 0,700 Z");
                }
                75%{
                  d: path("M 0,700 L 0,262 C 128.25,316.1071428571429 256.5,370.2142857142857 385,370 C 513.5,369.7857142857143 642.25,315.25 758,313 C 873.75,310.75 976.5,360.7857142857143 1088,361 C 1199.5,361.2142857142857 1319.75,311.6071428571429 1440,262 L 1440,700 L 0,700 Z");
                }
                100%{
                  d: path("M 0,700 L 0,262 C 138.92857142857144,328.4642857142857 277.8571428571429,394.92857142857144 405,381 C 532.1428571428571,367.07142857142856 647.5000000000001,272.75 760,260 C 872.4999999999999,247.24999999999997 982.1428571428571,316.07142857142856 1095,330 C 1207.857142857143,343.92857142857144 1323.9285714285716,302.9642857142857 1440,262 L 1440,700 L 0,700 Z");
                }
              }</style><defs><linearGradient id="gradient" x1="72%" y1="95%" x2="28%" y2="5%"><stop offset="5%" stop-color="#769d88"></stop><stop offset="95%" stop-color="#fbfaf8"></stop></linearGradient></defs><path d="M 0,700 L 0,262 C 138.92857142857144,328.4642857142857 277.8571428571429,394.92857142857144 405,381 C 532.1428571428571,367.07142857142856 647.5000000000001,272.75 760,260 C 872.4999999999999,247.24999999999997 982.1428571428571,316.07142857142856 1095,330 C 1207.857142857143,343.92857142857144 1323.9285714285716,302.9642857142857 1440,262 L 1440,700 L 0,700 Z" stroke="none" stroke-width="0" fill="url(#gradient)" fill-opacity="1" class="transition-all duration-300 ease-in-out delay-150 path-0"></path>
      </svg>     
      <!-- Text inside Banner -->
      <div class="absolute inset-0 flex items-center justify-center">
        <h2 class="text-white text-3xl md:text-4xl font-semibold">Καλωσορίσατε στην Ενάλια</h2>
      </div>
  </div>
</Fragment>
  <!-- Team Section -->
  <section class="mt-16 grid gap-10 md:grid-cols-1">
    <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-2 lg:py-2 mx-auto">
      <div class="max-w-3xl mx-auto text-center mb-10 lg:mb-14">
        <h2 class="text-3xl font-bold md:text-4xl md:leading-tight dark:text-white">Η Ομάδα</h2>
      </div>

      <div class="grid grid-cols-2 gap-6 sm:gap-10 lg:gap-12">
        <!-- First Image Block -->
        <div class="text-center">
          <Image
            src={chris}
            alt="Χρήστος Κωστικίδης"
            class="rounded-full w-32 h-32 sm:w-44 sm:h-44 lg:w-60 lg:h-60 object-cover mx-auto"
          />
          <div class="mt-2 sm:mt-4">
            <h3 class="text-sm font-medium sm:text-base lg:text-lg">Χρήστος Κωστικίδης</h3>
            <p class="text-xs sm:text-sm lg:text-base">Ψυχοθεραπευτής</p>
          </div>
        </div>

        <!-- Second Image Block -->
        <div class="text-center">
          <Image
            src={evi}
            alt="Εύη Καραβάνα"
            class="rounded-full w-32 h-32 sm:w-44 sm:h-44 lg:w-60 lg:h-60 object-cover mx-auto"
          />
          <div class="mt-2 sm:mt-4">
            <h3 class="text-sm font-medium sm:text-base lg:text-lg">Εύη Καραβάνα</h3>
            <p class="text-xs sm:text-sm lg:text-base">Ψυχοθεραπεύτρια</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Space Section -->
  <section class="mt-16 grid gap-10 md:grid-cols-2">
    <div>
      <h2 class="text-2xl font-semibold text-secondary-800 mb-2">Οι Χώροι μας</h2>
      <p class="text-tertiary-600">Ένας φιλόξενος χώρος σχεδιασμένος να προσφέρει ασφάλεια και ηρεμία για τις θεραπευτικές σας συνεδρίες.</p>
    </div>
    <div>
      <Image src={image1} alt="Χώρος θεραπείας" class="rounded-lg shadow-md" />
    </div>
  </section>

  <!-- Call to Action -->
  <section class="mt-16 text-center">
    <a href="/contact" class="bg-primary-600 text-inpage px-6 py-3 rounded-lg shadow hover:bg-hover-700 transition">
      Κλείστε Ραντεβού
    </a>
  </section>
</BaseLayout>
