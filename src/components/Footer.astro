---
import '../styles/tailwind.css';
const BASE = import.meta.env.BASE_URL;
import {
  Facebook,
  Mail,
  Phone
} from '@lucide/astro';
import instagram from "../assets/instagram.svg"
---

<footer
  style={`background-image:url(${BASE}images/wave-haikei-footer.svg)`}
  class="mt-auto w-full pt-10 bg-no-repeat bg-cover"
>
  <div class="max-w-7xl mx-auto flex flex-col items-center text-center py-10 md:flex-row md:justify-between md:items-start md:text-left gap-10 w-full">
    <!-- Υπηρεσίες -->
    <div>
      <h4 class="text-xs font-semibold text-gray-900 uppercase">Οι Υπηρεσίες</h4>
      <div class="mt-3 space-y-2 text-sm">
        <p><a class="text-inpage hover:text-gray-800" href="services/individual-therapy">Ατομική Θεραπεία</a></p>
        <p><a class="text-inpage hover:text-gray-800" href="services/couple-therapy">Θεραπεία Ζεύγους</a></p>
        <p><a class="text-inpage hover:text-gray-800" href="services/family-therapy">Οικογενειακή Θεραπεία</a></p>
        <p><a class="text-inpage hover:text-gray-800" href="services/group-therapy">Ομαδική Θεραπεία</a></p>
        <p><a class="text-inpage hover:text-gray-800" href="services/parent-counselling">Συμβουλευτική Γονέων</a></p>
      </div>
    </div>

    <!-- Θεραπευτές -->
    <div>
      <h4 class="text-xs font-semibold text-inpage-900 uppercase">Οι Θεραπευτές</h4>
      <div class="mt-3 space-y-2 text-sm">
        <p><a class="text-inpage hover:text-gray-800" href="team/karavana">Εύη Καραβάνα</a></p>
        <p><a class="text-inpage hover:text-gray-800" href="team/kostikidis">Χρήστος Κωστικίδης</a></p>
      </div>
    </div>

    <!-- Άλλες Υπηρεσίες -->
    <div>
      <h4 class="text-xs font-semibold text-inpage-900 uppercase">Άλλες Υπηρεσίες</h4>
      <div class="mt-3 space-y-2 text-sm">
        <p><a class="text-inpage hover:text-gray-800" href="online">Online Ψυχοθεραπεία</a></p>
        <p><a class="text-inpage hover:text-gray-800" href="actions">Βιωματικές Δράσεις</a></p>
      </div>
    </div>

    <!-- Χώρος & Επικοινωνία -->
    <div>
      <h4 class="text-xs font-semibold text-gray-900 uppercase"><a href="gallery">Ο Χώρος</a></h4>
      <h4 class="text-xs font-semibold text-gray-900 uppercase"><a href="contact">Επικοινωνία</a></h4>
    </div>
    <!-- MOBILE ONLY: Social icons -->
    <div class="md:hidden mt-3 flex justify-center gap-6">
      <a href="https://www.facebook.com/share/177oPonYrR/" target="_blank" aria-label="Facebook">
        <Facebook class="w-5 h-5 text-secondary hover:text-gray-800" />
      </a>
      <a href="mailto:enalia@enalia-therapy.gr" aria-label="Email">
        <Mail class="w-5 h-5 text-secondary hover:text-gray-800" />
      </a>
      <a href="https://www.instagram.com/enalia.therapy" target="_blank" aria-label="Instagram">
        <svg xmlns="http://www.w3.org/2000/svg"
          width="20" height="20" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="w-5 h-5 text-secondary hover:text-gray-800">
          <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
        </svg>
      </a>
    </div>
  </div>

  <div class="max-w-7xl mx-auto mt-10 border-t pt-6 border-gray-200 dark:border-neutral-700 flex flex-col items-center gap-4 text-sm sm:flex-row sm:justify-between">
    <div class="space-x-4 text-center sm:text-left">
      <a class="text-inpage hover:text-gray-800" href="terms">Όροι Χρήσης</a>
      <a class="text-inpage hover:text-gray-800" href="privacy">Προσωπικά Δεδομένα</a>
      <a class="text-inpage hover:text-gray-800" href="cookies">Πολιτική Cookies</a>
    </div>

    <p class="text-inpage text-center sm:text-right w-full sm:w-auto mt-4 sm:mt-0">
      © {new Date().getFullYear()} Ενάλια. All rights reserved.
    </p>
  </div>
</footer>
