---
import {
  Facebook,
  Mail,
  Phone
} from '@lucide/astro';
import logo from "../assets/logo.png";
import instagram from "../assets/instagram.svg"
const BASE = import.meta.env.BASE_URL || '/';
---

<header class="fixed top-0 left-0 z-40 w-full bg-primary md:left-72 md:w-[calc(100%-18rem)]">
  <!-- MOBILE HEADER -->
  <div class="md:hidden flex items-center justify-between h-12 px-4">
    <div class="w-8 h-8"></div>
    <img src={logo.src} alt="Ενάλια" class="h-10 w-auto object-contain"/>
  </div>

  <!-- DESKTOP/TABLET HEADER -->
  <div class="hidden md:flex justify-between w-full h-10 bg-primary px-4 items-center">
    <a
      class="text-md font-semibold text-center text-secondary"
      href={`${BASE}contact`}
    >
      Κλείστε την πρώτη σας συνεδρία
    </a>

    <ul class="flex items-center h-full gap-8 px-6 text-md font-semibold tracking-wide text-secondary">
      <li class="flex items-center h-full"><span class="flex items-center gap-1 h-full"><a href="https://www.facebook.com/share/177oPonYrR/" target="_blank"><Facebook class="w-4 h-4" /></a></span></li>
      <li class="flex items-center h-full"><span class="flex items-center gap-1 h-full"><a href="mailto:enalia@enalia-therapy.gr"><Mail class="w-4 h-4" /></a></span></li>
      <li class="flex items-center h-full"><span class="flex items-center gap-1 h-full">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram-icon lucide-instagram w-4 h-4"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>
      </span></li>
    </ul>

    <ul class="flex items-center h-full gap-8 px-6 text-md font-semibold tracking-wide text-secondary">
      <li class="flex items-center h-full">
        <span class="flex items-center gap-1 h-full">
          <a class="self-center" href="https://maps.app.goo.gl/yRFXY9cB1Xb4ipSA8" target="_blank" rel="noopener noreferrer" aria-label="Open Google Maps">Λευκής 12, Νέα Ιωνία</a>
        </span>
      </li>
    </ul>
  </div>
</header>

