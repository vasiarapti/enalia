---
import {
  Facebook,
  Mail,
  Linkedin,
  Phone
} from '@lucide/astro';

const BASE = import.meta.env.BASE_URL || '/';
---

<header class="fixed top-0 left-0 md:left-72 z-20 w-full bg-secondary flex flex-col">
  <!-- Top bar -->
  <div class="flex justify-center w-full h-10 bg-secondary px-4">
    <a
      class="text-md font-semibold text-center"
      href={`${BASE}contact`}
    >
      Κλείστε την πρώτη σας συνεδρία
    </a>
  </div>

  <!-- Social links / contact bar -->
  <div class="header-nav hidden lg:flex h-16 bg-inpage w-full justify-center">
    <ul class="flex items-center h-full gap-8 px-6 text-sm font-semibold tracking-wide">
      <li class="flex items-center h-full">
        <span class="flex items-center gap-1 h-full">
          <Facebook class="w-4 h-4" />
          <p>Enalia</p>
        </span>
      </li>
      <li class="flex items-center h-full">
        <span class="flex items-center gap-1 h-full">
          <Mail class="w-4 h-4" />
          <p>enalia-therapy.com</p>
        </span>
      </li>
      <li class="flex items-center h-full">
        <span class="flex items-center gap-1 h-full">
          <Linkedin class="w-4 h-4" />
          <p>Linked In</p>
        </span>
      </li>
      <li class="flex items-center h-full">
        <span class="flex items-center gap-1 h-full">
          <a class="self-center" href="http://googlemaps.com">Νέα Ιονία</a>
        </span>
      </li>
      <li class="flex items-center h-full">
        <span class="flex items-center gap-1 h-full">
          <Phone class="w-4 h-4" />
          <a class="self-center" href="tel:+2101111111">2101111111</a>
        </span>
      </li>
    </ul>
  </div>
</header>